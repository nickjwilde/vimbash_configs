set ignorecase
set autoindent
set number
set relativenumber
set incsearch
set autochdir
set hlsearch
set whichwrap+=<,>,h,l,[,]
set smartindent
set tabstop=4
set expandtab
set shiftwidth=4
set ruler
set showcmd

syntax on

inoremap jj <esc>
nnoremap <CR> :nohls<CR>
nnoremap <Space> $
nnoremap <Tab> ^
nnoremap Y y$
